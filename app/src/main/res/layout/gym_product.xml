<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:padding="22dp">
    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold"
        android:textSize="17dp" android:layout_marginTop="20dp"
        android:text="시설"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="8dp"
                   android:layout_marginRight="15dp"

                   android:src="@drawable/shower"/>
        <ImageView android:layout_width="50dp" android:layout_height="50dp" android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:src="@drawable/parking"/>
        <ImageView android:layout_width="53dp" android:layout_height="53dp" android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:src="@drawable/hanger"/>
        <ImageView android:layout_width="46dp" android:layout_height="46dp" android:layout_marginLeft="15dp"

                   android:src="@drawable/locker"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="샤워실"
                android:layout_margin="15dp"

                android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="주차"
                android:layout_margin="15dp" android:paddingLeft="14dp"
                android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="탈의실"
                android:layout_margin="15dp" android:paddingLeft="20dp"
                android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="일일락커"   android:layout_margin="15dp" android:paddingLeft="6dp"
                android:textColor="#000000"/>
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="17dp" android:layout_marginBottom="20dp" android:layout_marginTop="20dp"
            android:text="이용규정"
            android:textColor="#000000"/>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginTop="5dp"
                   android:src="@drawable/circle"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="운동화, 운동복 개인 지참 필수" android:layout_marginLeft="20dp"

                android:textColor="#000000"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"
                  android:orientation="horizontal">
        <ImageView android:layout_width="8dp" android:layout_height="8dp" android:layout_marginTop="5dp"
                   android:src="@drawable/circle"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="운동화, 운동복 개인 지참 필수" android:layout_marginLeft="20dp"

                android:textColor="#000000"
        />
    </LinearLayout>

    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="17dp" android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="전화"
            android:textColor="#000000"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="0623 - 3925 - 3925"
                android:textColor="#000000"/>
        <Button
                android:text="전화하기" android:layout_marginLeft="95dp"
                android:layout_width="110dp"
                android:layout_height="40dp" android:id="@+id/button"/>

    </LinearLayout>
    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginBottom="20dp"
            android:text="이용시간" android:layout_marginTop="40dp"
            android:textColor="#000000"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#000000" android:textStyle="bold" android:layout_marginRight="33dp"
                android:layout_marginBottom="5dp"
                android:text="평일"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#000000" android:layout_marginBottom="5dp"
                android:text="09:00 ~ 22:00"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#000000" android:textStyle="bold" android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="토요일"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#000000" android:layout_marginBottom="5dp"
                android:text="10:00 ~ 14:00"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#000000" android:textStyle="bold" android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="휴무일"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#000000" android:layout_marginBottom="5dp"
                android:text="매주 일요일"/>
    </LinearLayout>


    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="17dp" android:layout_marginBottom="20dp"
            android:text="주소" android:layout_marginTop="40dp"
            android:textColor="#000000"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="서울특별시 양천구 목동서로 40 양지빌딩"
                    android:textColor="#000000"/>

        </LinearLayout>
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content" android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginBottom="20dp" android:layout_marginTop="40dp"
                android:text="위치"
                android:textColor="#000000"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <ImageView android:layout_width="18dp" android:layout_height="18dp"
                   android:src="@drawable/subway"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="신목동역에서 1km" android:layout_marginLeft="10dp"
                android:textColor="#000000"/>

    </LinearLayout>




</LinearLayout>