<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
            >

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="리앤리 헬스장" android:layout_marginTop="20dp" android:layout_marginLeft="20dp" android:textSize="20dp"
                  android:textStyle="bold" android:textColor="#000000"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="10dp" android:text="경기도 부천시 역곡동 78-9" android:layout_marginLeft="20dp"
                  android:textSize="15dp" android:textColor="#000000"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="190dp"
                      android:background="#00BCD4" android:layout_marginTop="22dp"></LinearLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:paddingTop="22dp" android:text="멤버십으로 결제" android:layout_marginLeft="20dp"
                  android:textColor="#000000" android:textStyle="bold"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_marginLeft="20dp"
                        android:layout_height="wrap_content">

            <ImageView android:layout_width="400dp" android:layout_height="97dp"
                       android:src="@drawable/little_square"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="헬스" android:textStyle="bold" android:textColor="#000000"
                      android:layout_centerVertical="true" android:layout_marginLeft="50dp"/>
            <Button android:layout_width="30dp" android:layout_height="30dp"
                    android:id="@+id/circle_button" android:background="@drawable/custom_button"
                    android:text="1" android:textColor="#FC2069" android:layout_centerVertical="true"
                    android:layout_marginLeft="280dp"/>
        </RelativeLayout>
        <Button android:layout_marginLeft="20dp" android:layout_width="317dp" android:layout_height="60dp"
                android:text="헬스장 이용하기" android:textColor="#FC2069" android:textSize="17dp" android:textStyle="bold"
                android:background="@drawable/cutom_realbutton" android:layout_marginTop="230dp"
                android:id="@+id/realbutton"/>
    </LinearLayout>

</RelativeLayout>

