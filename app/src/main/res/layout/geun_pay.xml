<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="17dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" android:layout_marginEnd="130dp">
            <TextView
                    android:id="@+id/txt_toolbar_main_action"
                    android:layout_width="97dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="멤버십 신청"

                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_alignParentEnd="true"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:paddingTop="22dp"  android:layout_marginTop="20dp" android:paddingLeft="22dp"
                      android:paddingRight="22dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="멤버십 정보" android:textColor="#000000" android:textStyle="bold"
                      android:textSize="15dp" android:layout_marginBottom="10dp"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content" android:layout_height="130dp"
                           android:src="@drawable/square"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="3개월 - 30근" android:textSize="20dp" android:textStyle="bold"
                          android:layout_alignParentTop="true"
                          android:layout_centerInParent="true" android:layout_marginTop="35dp"
                          android:textColor="#000000"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="120,000" android:textSize="30dp" android:textStyle="bold"
                          android:layout_alignParentTop="true"
                          android:layout_centerInParent="true" android:layout_marginTop="70dp"
                          android:textColor="#000000"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="원" android:textSize="15dp" android:textColor="#000000" android:textStyle="bold"
                          android:layout_alignParentTop="true"
                          android:layout_alignParentRight="true" android:layout_marginRight="80dp"
                          android:layout_marginTop="80dp"/>
            </RelativeLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="멤버십 시작날짜" android:layout_marginBottom="10dp" android:textColor="#000000" android:textStyle="bold"
                      android:textSize="15dp" android:layout_marginTop="20dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="2019년 5월 17일 (금)" android:textColor="#000000"/>
            <LinearLayout android:layout_width="328dp" android:layout_height="32dp"
                          android:orientation="horizontal">
                <View
                        android:layout_marginTop="30dp"
                        android:layout_width="250dp"
                        android:layout_height="0.7dp"
                        android:layout_centerInParent="true"
                        android:background="#707070"/>

                <ImageView android:layout_width="25dp" android:layout_height="25dp" android:layout_marginLeft="20dp"
                           android:src="@drawable/small_calender"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="멤버십 이용기간" android:textColor="#000000" android:textStyle="bold"
                      android:textSize="15dp" android:layout_marginTop="20dp" android:layout_marginBottom="10dp"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <ImageView android:layout_width="8dp" android:layout_height="148dp"
                           android:src="@drawable/path"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="이용 시작일" android:layout_marginLeft="15dp" android:textColor="#000000"
                              android:layout_marginTop="8dp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="2019년 5월 17일 (금)" android:textSize="10dp" android:layout_marginLeft="15dp"
                              android:textColor="#000000"
                              android:layout_marginTop="6dp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="이용 만기일" android:layout_marginLeft="15dp" android:textColor="#000000"
                              android:layout_marginTop="60dp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="2019년 8월 15일 (목)" android:textSize="10dp" android:layout_marginLeft="15dp"
                              android:textColor="#000000"
                              android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="결제 금액"  android:layout_marginBottom="10dp" android:layout_marginTop="20dp" android:textColor="#000000"
                      android:textStyle="bold"
                      android:textSize="15dp"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="120,000" android:textStyle="bold" android:textColor="#000000"
                          android:textSize="40dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="원" android:textSize="15dp" android:textColor="#000000"
                          android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="할인 쿠폰" android:textColor="#000000" android:textSize="9dp"/>


            <Button android:layout_width="320dp" android:layout_height="60dp"
                    android:layout_marginTop="30dp" android:text="결제하기" android:textStyle="bold"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>