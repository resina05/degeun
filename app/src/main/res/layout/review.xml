<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:padding="22dp"
              android:id="@+id/ll_rv_item_product_overview_container">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:src="@drawable/user_1" android:id="@+id/user"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="강상우" android:textSize="17dp"
        android:textStyle="bold" android:id="@+id/name"
        android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="#000000" android:id="@+id/text"
    android:text="시설도 깔끔하고 직원분들도 너무 친절했어요! 기구도 매번 알코올로 소독하시던데 그런 모습을
보니까 더 안심하고 가게 되네요~ 역에서도 가까워서 접근성도 괜찮아서 정말 강추합니다!!"
    android:layout_margin="15dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="2019/04/05" android:id="@+id/date"

    android:layout_marginLeft="220dp"/>



</LinearLayout>
</RelativeLayout>