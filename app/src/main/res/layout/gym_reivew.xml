<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:padding="22dp">
    <Button android:layout_width="300dp" android:layout_height="90dp" android:layout_marginLeft="32dp"
    android:text="리뷰 작성" android:textStyle="bold" android:textSize="22dp"/>
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="17dp" android:layout_marginTop="20dp"
            android:text="리뷰 평가"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"/>
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="50dp"
            android:text="4.9"
            android:layout_marginBottom="15dp" android:layout_marginLeft="150dp"
            android:textColor="#000000"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ratingBar"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="3.0"
            android:layout_marginLeft="60dp" android:layout_marginBottom="30dp"
           />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="(61)" android:textColor="#000000" android:layout_marginTop="15dp" android:layout_marginLeft="5dp" android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal"
    android:layout_marginBottom="15dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000"
    android:text="시설 접근성" android:textStyle="bold"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ratingBar1" android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.0"
                android:layout_marginLeft="190dp"
                style="?android:attr/ratingBarStyleSmall"/></LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal"
                  android:layout_marginBottom="15dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000"
                  android:textStyle="bold"
                  android:text="시설 상태"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ratingBar2"
                android:layout_marginLeft="203.2dp"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="3.5"
                style="?android:attr/ratingBarStyleSmall"/></LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal"
                  android:layout_marginBottom="15dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000"
                  android:textStyle="bold"

                  android:text="시설 청결도"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ratingBar3"
                android:layout_marginLeft="190dp"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.5"
                style="?android:attr/ratingBarStyleSmall"/></LinearLayout>
       <!--RatingBar style="@style/starRatingBar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:numStars="5"
                   android:stepSize="0.5"
                   android:rating="3.0"
                   android:focusable="true"
                  /> -->

    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textStyle="bold"
            android:textSize="17dp" android:layout_marginTop="20dp"
            android:text="리뷰 내용"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>